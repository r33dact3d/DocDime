{
  "version": 2,
  "builds": [
    {
      "src": "package.json",
      "use": "@vercel/static-build",
      "config": { "distDir": "build" }
    },
    {
      "src": "api/upload.js",
      "use": "@vercel/node"
    }
  ],
  "rewrites": [
    { 
      "source": "/api/upload", 
      "destination": "/api/upload.js" 
    },
    { 
      "source": "/(.*)", 
      "destination": "/" 
    }
  ],
  "env": {
    "REACT_APP_HANDCASH_APP_ID": "",
    "REACT_APP_HANDCASH_APP_SECRET": "",
    "CI": "false"
  }
}